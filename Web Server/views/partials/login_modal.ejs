<!-- START: Login Modal -->
<div class="nk-modal modal fade" id="modalLogin" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="signinCloseBtn">
                    <span class="ion-android-close"></span>
                </button>

                <h4 class="mb-0" id="signinHead"><span class="text-main-1">Sign</span> In</h4>

                <div class="nk-gap-1"></div>
                <form action="#" class="nk-form text-white" id="login">
                    <input type="hidden" value="<%- minUID %>" id="minUID">
                    <input type="hidden" value="<%- maxUID %>" id="maxUID">
                    <div class="row vertical-gap">
                        <div class="col-md-6">
                            Use user id and password:

                            <div class="nk-gap"></div>
                            <input type="text" value="" name="uid" id="uid" class="required form-control"
                                placeholder="User Id">

                            <div class="nk-gap"></div>
                            <input type="password" value="" name="password" class="form-control"
                                placeholder="Password (Optional)">
                        </div>
                        <div class="col-md-6">
                            Or social account:

                            <div class="nk-gap"></div>

                            <ul class="nk-social-links-2">
                                <li><a class="nk-social-facebook" href="#"><span class="fab fa-facebook"></span></a>
                                </li>
                                <li><a class="nk-social-google-plus" href="#"><span
                                            class="fab fa-google-plus"></span></a></li>
                                <li><a class="nk-social-twitter" href="#"><span class="fab fa-twitter"></span></a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="nk-gap-1"></div>
                    <div class="row vertical-gap">
                        <div class="col-md-6">
                            <button href="#" class="nk-btn nk-btn-rounded nk-btn-color-white nk-btn-block">Sign In</button>
                        </div>
                        <div class="col-md-6">
                            <div class="mnt-5">
                                <small><a href="#" id="logout">Click here to logout</a></small>
                            </div>
                            <div class="mnt-5">
                                <small><a href="#" id="newUserDemo">Enter new user demo mode</a></small>
                            </div>
                            <div class="mnt-5" style="display: none;" id="resetNewUser">
                                <small><a href="#">Reset new user data</a></small>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- END: Login Modal -->